function vir
{
  tmux new-session -d -s vir
  tmux new-window -t vir:2 -n 'vim' "vim $*"
  tmux split-window -d -t vir:2 -p 25 -v 'lein repl'
  tmux attach-session -t vir
}

function bigfiles
{
  tree -ah --du . | ack '\[(\d{3,}M|\d+.*G)\]'
}

